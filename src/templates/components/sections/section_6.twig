{% set gallery_data = [
    {
        img: "./assets/img/gallery_1-1.jpg",
        icon: "./assets/img/svg/tyre.svg",
        text: "Automotive"
    },   
    {
        img: "./assets/img/gallery_1-2.jpg",
        icon: "./assets/img/svg/bolt.svg",
        text: "Electrical Insulation"
    },   
    {
        img: "./assets/img/gallery_1-3.jpg",
        icon: "./assets/img/svg/v-engine.svg",
        text: "Small Engine"
    },   
    {
        img: "./assets/img/gallery_1-4.jpg",
        icon: "./assets/img/svg/pot.svg",
        text: "Home & Commercial Kitchen"
    },   
    {
        img: "./assets/img/gallery_1-5.jpg",
        icon: "./assets/img/svg/light-bulb.svg",
        text: "Lighting"
    },   
    {
        img: "./assets/img/gallery_1-6.jpg",
        icon: "./assets/img/svg/valve.svg",
        text: "Oil & Gas"
    },   
] %}

<div class="row section_6_bg overflow-hidden">
    <div class="section_6 col px-2 pt-32 pb-20">
        <div class="container cont-site">
            <h3 class="section_6__header text_bicolor text-start mb-0 col-lg-4">Markets & <em>Applications</em></h3>
            <div class="secrion_6__gallery_1-wrapper col-md-12 d-flex pt-8 flex-wrap justify-content-between">
                
                {% for item in gallery_data %}
                    <div class="gallery_1__item col-md-5 offset-md-1 offset-lg-0 col-lg-4 d-inline-block mb-12">
                        <div class="gallery_1__item__img-cont col-12 overflow-hidden">
                            <img src={{ item.img }} alt="Automotive" class="gallery_1__item__img col-12">
                        </div>
                        <div class="gallery_1__item__descr-cont col d-flex align-items-center pl-5 pr-3">
                            <img src={{ item.icon }} alt="Automotive" class="gallery_1__item__icon col-2  max-h-14">
                            <p class="gallery_1__item__text text-white mb-0 ml-6">{{ item.text }}</p>
                            
                        </div>
                    </div>
                {% endfor %}
                
                
                



            </div>
            
        </div>
    </div>
</div>