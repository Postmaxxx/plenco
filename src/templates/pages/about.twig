        class: ""
    },
    nav_side: {
        visible: false
    },
    section_11: {
        class: "page_about overline-r overline_mob-r",
        blocks: [
            {
                block: "../blocks/_block_3.twig",
                pic_position: "",
                props: "",
                img: "./assets/img/pages/about/customer-1.jpg",
